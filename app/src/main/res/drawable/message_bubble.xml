<!-- res/drawable/message_bubble.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#ECEFF1" /> <!-- Background color of the message bubble -->
    <corners android:radius="12dp" /> <!-- Rounded corners -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" /> <!-- Padding inside the message bubble -->
</shape>
